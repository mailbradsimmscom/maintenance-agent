# Maintenance Agent Environment Configuration
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development

# Server Configuration (for future API endpoints)
PORT=3001

# Database - Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here

# Vector Database - Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX_NAME=documents

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Security
ADMIN_TOKEN=your-secure-admin-token

# Agent Configuration
AGENT_RUN_INTERVAL_MINUTES=60
AGENT_BATCH_SIZE=5
AGENT_CONFIDENCE_THRESHOLD=0.7

# Feature Flags
ENABLE_REAL_WORLD_SEARCH=false
ENABLE_DEPENDENCY_INFERENCE=false
ENABLE_AUTO_LEARNING=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty